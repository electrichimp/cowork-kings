<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1632489031533-62cf8cea9d2a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2071&q=80);">
  <div class="container">
    <h1>My <strong>rentals</strong>!</h1>
  </div>
</div>
<div class="container">
  <h2 class="my-5">Mis rentas</h2>
  <div class="cards">
    <% @bookings.each do |booking| %>
      <div class="card-trip">
        <img src="https://images.unsplash.com/photo-1528508492773-4d8157f3bbfa?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2049&q=80" />
        <div class="card-trip-infos">
          <div>
            <h2><%= booking.coworking.name %></h2>
            <p>Aquilado por: <%= booking.user.email %></p>
            <% unless booking.accepted %>
              <%= link_to "Confirmar", confirm_booking_path(booking), method: :patch, class: "btn btn-primary" %>
            <% end %>
              <%= link_to "Cancelar", booking_path(booking), method: :delete, class: "btn btn-danger" %>
          </div>
        </div>
      </div>

    <% end %>

  </div>
</div>
